<div class="container">
  <h1 class="text-center my-4">Restaurant</h1>
  <div class="d-flex justify-content-center">
    <div class="row justify-content-center">
      <% @restaurants.each do |restaurant|%>
        <div class="card m-2 col-3" style="width: 30rem;">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name%></h5>
            <h6 class="card-subtitle mb-2 text-body-secondary"><%= restaurant.category %></h6>
            <p class="card-text">Phone number: <%= restaurant.phone_number %></p>
            <div class="d-flex justify-content-between">
              <%= link_to 'See details', restaurant_path(restaurant), class: 'btn btn-primary' %>
              <%= link_to 'See reviews', new_restaurant_review_path(restaurant), class: 'btn btn-secondary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to 'Add a new restaurant', new_restaurant_path, class: "btn btn-warning mt-4"%>
</div>